<UserControl
    x:Class="SamplesApp.Windows_UI_Xaml_Controls.Canvas.Measure_Children_In_Canvas"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

	<Grid>
		<Canvas>
			<Canvas>
				<Border x:Name="BBorderInCanvas" Background="Red" Height="100" Width="100" />
			</Canvas>
			<Border Background="Blue" Canvas.Top="20" Canvas.Left="50" Height="50" Width="50" />
			<StackPanel Canvas.Top="100" Canvas.Left="50">
				<Border Background="Yellow" Height="50" Width="50" />
				<Border Background="DarkGray" Height="50" Width="50" />
			</StackPanel>
		</Canvas>
		<Border x:Name="BBorderOutCanvas" Background="Green" HorizontalAlignment="Center"  Height="50" Width="50"/>
	</Grid>
</UserControl>
